// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  // This ensures the Prisma client is generated during build time
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql" // or whatever provider you're using
  url      = env("DATABASE_URL")
}

model Product {
  id      String  @id @default(cuid())
  title   String
  slug    String  @unique
  content String
  price   Int
  picture String?
}
